            <th></th>
        </tr>
    </thead>
    <tbody id="tweet">
    <% tweets.each do |t| %>
      <tr>
        <td><%= t.user.name %></td>
        <td><%= t.title %></td>
        <td><%= t.body %></td>
        <td><%= link_to "詳細", tweet_path(tweet) %></td>
        <% if tweet.user == current_user %>
          <td><%= link_to "編集", edit_tweet_path(tweet) %></td>
          <td><%= link_to "削除", tweet_path(tweet), method: :delete, remote: true %></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>
      </tr>
    <% end %>
    </tbody>
</table>